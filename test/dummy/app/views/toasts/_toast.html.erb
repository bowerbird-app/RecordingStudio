<div data-controller="toast"
     data-toast-timeout-value="4000"
     class="pointer-events-auto w-full max-w-md rounded-xl border border-slate-200 bg-white p-4 shadow-lg transition duration-200 ease-out opacity-0 translate-y-2">
  <div class="flex items-start justify-between gap-4">
    <div>
      <p class="text-sm font-semibold text-slate-900"><%= title %></p>
      <p class="mt-1 text-sm text-slate-600"><%= body %></p>
      <% if local_assigns[:payload].present? %>
        <dl class="mt-3 space-y-1 text-xs text-slate-500">
          <div class="flex justify-between gap-2">
            <dt class="font-medium">event_id</dt>
            <dd><%= payload[:event_id] %></dd>
          </div>
          <div class="flex justify-between gap-2">
            <dt class="font-medium">recording_id</dt>
            <dd><%= payload[:recording_id] %></dd>
          </div>
          <div class="flex justify-between gap-2">
            <dt class="font-medium">container</dt>
            <dd><%= [payload[:container_type], payload[:container_id]].compact.join("#") %></dd>
          </div>
          <div class="flex justify-between gap-2">
            <dt class="font-medium">recordable</dt>
            <dd><%= [payload[:recordable_type], payload[:recordable_id]].compact.join("#") %></dd>
          </div>
          <div class="flex justify-between gap-2">
            <dt class="font-medium">previous</dt>
            <dd><%= [payload[:previous_recordable_type], payload[:previous_recordable_id]].compact.join("#") %></dd>
          </div>
          <div class="flex justify-between gap-2">
            <dt class="font-medium">actor</dt>
            <dd><%= [payload[:actor_type], payload[:actor_id]].compact.join("#") %></dd>
          </div>
          <% if payload[:impersonator_type].present? %>
            <div class="flex justify-between gap-2">
              <dt class="font-medium">impersonator</dt>
              <dd><%= [payload[:impersonator_type], payload[:impersonator_id]].compact.join("#") %></dd>
            </div>
          <% end %>
          <div class="flex justify-between gap-2">
            <dt class="font-medium">action</dt>
            <dd><%= payload[:action] %></dd>
          </div>
          <div class="flex justify-between gap-2">
            <dt class="font-medium">occurred_at</dt>
            <dd><%= payload[:occurred_at]&.to_s %></dd>
          </div>
        </dl>
      <% end %>
    </div>
    <button type="button" class="text-slate-400 hover:text-slate-600" data-action="toast#dismiss">âœ•</button>
  </div>
</div>
