<%= render FlatPack::Card::Component.new do |card| %>
  <% card.header(divider: false) do %>
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold">Recording Studio Demo</h2>
      <p class="text-sm text-slate-500">Track recordable changes, capture snapshots, and audit events across your workspace.</p>
    </div>
  <% end %>

  <% card.body do %>
    <div class="flex flex-wrap gap-3">
      <%= render FlatPack::Button::Component.new(text: "Pages", style: :secondary, url: pages_path) %>
      <%= render FlatPack::Button::Component.new(text: "Events", style: :secondary, url: events_path) %>
      <%= render FlatPack::Button::Component.new(text: "Recordings", style: :secondary, url: recordings_path) %>
    </div>
  <% end %>
<% end %>
