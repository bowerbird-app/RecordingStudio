<% content_for :title, "Recording" %>

<div class="flex items-start justify-between">
  <div>
    <p class="text-sm uppercase tracking-wide text-slate-500">Recording</p>
    <h2 class="text-2xl font-semibold"><%= @recording.recordable.title %></h2>
    <p class="mt-2 text-sm text-slate-600"><%= @recording.recordable.summary %></p>
  </div>
  <div class="flex items-center gap-3">
    <%= link_to "Edit", edit_page_path(@recording), class: "rounded-md border border-slate-300 px-3 py-2 text-sm font-medium text-slate-700" %>
    <%= link_to "Back", pages_path, class: "rounded-md border border-slate-300 px-3 py-2 text-sm font-medium text-slate-700" %>
  </div>
</div>

<div class="mt-8 grid gap-6 lg:grid-cols-[1.2fr_0.8fr]">
  <section class="space-y-6">
    <div class="rounded-lg border border-slate-200 bg-white p-6">
      <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Current Snapshot</h3>
      <dl class="mt-4 grid gap-4 text-sm">
        <div>
          <dt class="text-slate-500">Version</dt>
          <dd class="font-medium text-slate-900"><%= @recording.recordable.version %></dd>
        </div>
        <div>
          <dt class="text-slate-500">Original ID</dt>
          <dd class="font-medium text-slate-900"><%= @recording.recordable.original_id || @recording.recordable.id %></dd>
        </div>
        <div>
          <dt class="text-slate-500">Last updated</dt>
          <dd class="font-medium text-slate-900"><%= l(@recording.updated_at, format: :long) %></dd>
        </div>
      </dl>
    </div>

    <div class="rounded-lg border border-slate-200 bg-white p-6">
      <div class="flex items-center justify-between">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Event Timeline</h3>
        <%= button_to "Log Comment Event", log_event_recording_path(@recording), method: :post, class: "rounded-md bg-slate-900 px-3 py-2 text-sm font-medium text-white" %>
      </div>
      <div class="mt-4 space-y-4">
        <% @events.each do |event| %>
          <div class="rounded-md border border-slate-200 p-4">
            <div class="flex items-center justify-between text-sm">
              <span class="font-semibold text-slate-900"><%= event.action %></span>
              <span class="text-slate-500"><%= l(event.occurred_at, format: :short) %></span>
            </div>
            <div class="mt-2 text-xs text-slate-500">
              Actor: <span class="font-medium text-slate-700"><%= actor_label(event.actor) %></span>
            </div>
            <div class="mt-2 text-xs text-slate-500">
              Recordable: <span class="font-medium text-slate-700"><%= recordable_label(event.recordable) %></span>
            </div>
            <div class="mt-2 text-xs text-slate-500">
              Previous: <span class="font-medium text-slate-700"><%= recordable_label(event.previous_recordable) %></span>
            </div>
            <% if event.metadata.present? %>
              <div class="mt-2 rounded bg-slate-50 px-3 py-2 text-xs text-slate-600">
                <%= JSON.pretty_generate(event.metadata) %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <aside class="space-y-6">
    <div class="rounded-lg border border-slate-200 bg-white p-6">
      <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Recording Metadata</h3>
      <dl class="mt-4 grid gap-4 text-sm">
        <div>
          <dt class="text-slate-500">Container</dt>
          <dd class="font-medium text-slate-900"><%= @recording.container_type %></dd>
        </div>
        <div>
          <dt class="text-slate-500">Container ID</dt>
          <dd class="font-medium text-slate-900"><%= @recording.container_id %></dd>
        </div>
        <div>
          <dt class="text-slate-500">Status</dt>
          <dd class="font-medium text-slate-900"><%= @recording.discarded_at ? "Archived" : "Active" %></dd>
        </div>
      </dl>
    </div>
  </aside>
</div>
