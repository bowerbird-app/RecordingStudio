<%= form_with model: workspace, class: "space-y-6" do |form| %>
  <%= render FlatPack::TextInput::Component.new(
    name: "workspace[name]",
    label: "Name",
    value: workspace.name
  ) %>

  <div class="flex items-center gap-3">
    <%= form.submit "Create Workspace", class: "rounded-md bg-slate-900 px-4 py-2 text-sm font-medium text-white" %>
    <%= link_to "Cancel", workspaces_path, class: "text-sm font-medium text-slate-500" %>
  </div>
<% end %>
