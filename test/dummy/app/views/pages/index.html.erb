<% content_for :title, "Pages" %>

<%= render FlatPack::Breadcrumb::Component.new(class: "mb-4") do |breadcrumb| %>
  <% breadcrumb.item(text: "Home", href: root_path) %>
  <% breadcrumb.item(text: "Pages") %>
<% end %>

<%= render FlatPack::Card::Component.new(class: "mb-6") do |card| %>
  <% card.header(divider: false) do %>
    <div class="space-y-3">
      <div>
        <h2 class="text-2xl font-semibold">Pages</h2>
        <p class="text-sm text-slate-500">Recordings tracked inside the workspace.</p>
      </div>
      <div class="flex flex-wrap items-center gap-2">
        <%= render FlatPack::Button::Component.new(text: "New Page", style: :primary, url: new_page_path) %>
        <% if params[:trashed].to_s == "true" %>
          <%= render FlatPack::Button::Component.new(text: "Show active", style: :secondary, url: pages_path) %>
        <% else %>
          <%= render FlatPack::Button::Component.new(text: "Show trashed", style: :secondary, url: pages_path(trashed: true)) %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<div class="mt-8 overflow-hidden rounded-lg border border-slate-200 bg-white">
  <% if @recordings.any? %>
    <%= render FlatPack::Table::Component.new(data: @recordings) do |table| %>
      <% table.column(
        title: "Title",
        html: ->(recording) { link_to(recording.recordable.title, recording_path(recording), class: "hover:underline") }
      ) %>

      <% table.column(
        title: "Children",
        html: ->(recording) {
          if params[:trashed].to_s == "true"
            recording.child_recordings.including_trashed.count
          else
            recording.child_recordings.count
          end
        }
      ) %>

      <% table.column(
        title: "Status",
        html: ->(recording) {
          status_text = recording.trashed_at ? "Trashed" : "Active"
          status_style = recording.trashed_at ? :warning : :success
          render FlatPack::Badge::Component.new(text: status_text, style: status_style, size: :sm)
        }
      ) %>

      <% table.column(
        title: "Last updated by",
        html: ->(recording) {
          last_event = recording.events.recent.first
          actor_label(last_event&.actor)
        }
      ) %>

      <% table.column(title: "Updated", html: ->(recording) { "#{time_ago_in_words(recording.updated_at)} ago" }) %>

      <% table.with_action(text: "View", url: ->(recording) { recording_path(recording) }) %>
      <% table.with_action(text: "Edit", url: ->(recording) { edit_page_path(recording) }) %>
      <% table.with_action(
        text: "Delete",
        url: ->(recording) { page_path(recording) },
        method: :delete,
        data: { turbo_confirm: "Archive this page?" }
      ) %>
    <% end %>
  <% else %>
    <div class="px-6 py-10 text-center text-sm text-slate-500">
      No pages yet. Create one to see recordings in action.
    </div>
  <% end %>
</div>
