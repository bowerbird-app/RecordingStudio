<% content_for :title, "New Page" %>

<%= render FlatPack::Breadcrumb::Component.new(class: "mb-4") do |breadcrumb| %>
  <% breadcrumb.item(text: "Home", href: root_path) %>
  <% breadcrumb.item(text: "Pages", href: pages_path) %>
  <% breadcrumb.item(text: "New") %>
<% end %>

<%= render FlatPack::Card::Component.new(class: "max-w-2xl") do |card| %>
  <% card.header(divider: false) do %>
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold">New Page</h2>
      <p class="text-sm text-slate-500">Create a new recording and first snapshot.</p>
    </div>
  <% end %>

  <% card.body do %>
    <%= render "form", recordable: @recordable, form_url: pages_path, form_method: :post, submit_label: "Create Page" %>
  <% end %>
<% end %>
