<% content_for :title, "Edit Page" %>

<%= render FlatPack::Breadcrumb::Component.new(class: "mb-4") do |breadcrumb| %>
  <% breadcrumb.item(text: "Home", href: root_path) %>
  <% breadcrumb.item(text: "Recordings", href: recordings_path) %>
  <% breadcrumb.item(text: recordable_label(@recording.recordable), href: page_path(@recording)) %>
  <% breadcrumb.item(text: "Edit") %>
<% end %>

<div class="max-w-2xl space-y-6">
  <%= render FlatPack::Card::Component.new do |card| %>
    <% card.body do %>
      <h2 class="text-2xl font-semibold">Edit Page</h2>
      <p class="mt-1 text-sm text-slate-500">Create a new snapshot. The current recording will repoint to it.</p>
    <% end %>
  <% end %>

  <div class="rounded-lg border border-slate-200 bg-white p-6">
    <%= render "form", recordable: @recordable, form_url: page_path(@recording), form_method: :patch, submit_label: "Save Revision" %>
  </div>
</div>
