<% content_for :title, "Actors" %>

<%= render FlatPack::Breadcrumb::Component.new(class: "mb-4") do |breadcrumb| %>
  <% breadcrumb.item(text: "Home", href: root_path) %>
  <% breadcrumb.item(text: "Actors") %>
<% end %>

<%= render FlatPack::Card::Component.new(class: "mb-6") do |card| %>
  <% card.header(divider: false) do %>
    <div class="space-y-3">
      <div>
        <h2 class="text-2xl font-semibold">Actors</h2>
        <p class="text-sm text-slate-500">Users and system actors who can perform actions.</p>
      </div>
    </div>
  <% end %>
<% end %>

<div class="mt-8 overflow-hidden rounded-lg border border-slate-200 bg-white">
  <% if @actors.any? %>
    <%= render FlatPack::Table::Component.new(data: @actors) do |table| %>
      <% table.column(title: "Name", html: ->(row) { row[:name] }) %>
      <% table.column(title: "Email", html: ->(row) { row[:email].presence || "â€”" }) %>
    <% end %>
  <% else %>
    <div class="px-6 py-10 text-center text-sm text-slate-500">
      No actors found.
    </div>
  <% end %>
</div>
